@model IEnumerable<Centre_de_formation.Models.Formation>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex my-5 text- justify-content-between">
    <h1 class="text-primary">Liste des Formations</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create">Ajouter une Formation</a>
    </p>
</div>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Nom de la formation</th>
                <th>Cours</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NomFormation)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cours.NomCours)</td>
                    <td>@Html.DisplayFor(modelItem => item.PrixFormation)</td>
                    <td>
                        <a class="btn btn-info text-light" asp-action="Details" asp-route-id="@item.Id">Détails</a>
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Modifier</a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Supprimer</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>

