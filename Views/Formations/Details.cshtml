@model Centre_de_formation.Models.Formation

@{
    ViewData["Title"] = "Details";
}


<h1 class="mb-5 text-primary my-4">Details de la formation @Model?.NomFormation</h1>

<div class="mt-5">

    <dl class="row">
        <dt class="col-sm-2">
            Nom de la formation
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomFormation)
        </dd>
        <dt class="col-sm-2">
            Cours de la formation
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cours.NomCours)
        </dd>
        <dt class="col-sm-2">
            Prix
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrixFormation)
        </dd>
    </dl>
</div>
<div class="d-flex justify-content-start gap-3 align-items-center">
    <a asp-action="Index" class="btn btn-outline-primary">Retour</a>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-success">Modifier</a>

</div>


