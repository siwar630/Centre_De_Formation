@model Centre_de_formation.Models.Cours

@{
    ViewData["Title"] = "Details";
}


<h1 class="mb-5 text-primary my-4">Details du cours @Model?.NomCours</h1>

<div class="mt-5">

    <dl class="row">
        <dt class="col-sm-2">
            Nom du cours
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomCours)
        </dd>
        
    </dl>
</div>
<div class="d-flex justify-content-start gap-3 my-5 align-items-center">
    <a asp-action="Index" class="btn btn-outline-primary">Retour</a>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-success">Modifier</a>

</div>