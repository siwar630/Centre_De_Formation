@model Centre_de_formation.Models.Salle

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-5 text-primary my-4">Details de la salle @Model?.NumSalle</h1>

<div class="mt-5">
    
    <dl class="row">
        <dt class = "col-sm-2">
            Numéro de la salle 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumSalle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Depatement)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Depatement)
        </dd>
    </dl>
</div>
<div class="d-flex justify-content-start gap-3 align-items-center">
    <a asp-action="Index" class="btn btn-outline-primary">Retour</a>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-success">Modifier</a>
    
</div>
