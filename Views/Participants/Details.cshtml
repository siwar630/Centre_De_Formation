@model Centre_de_formation.Models.Participant

@{
    ViewData["Title"] = "Details";
}


<h1 class="mb-5 text-primary my-4">Details du participant @Model?.Nom @Model.Prenom</h1>

<div class="mt-5">

    <dl class="row">
        <dt class="col-sm-2">
            Nom
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class="col-sm-2">
            Prénom
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prenom)
        </dd>
        <dt class="col-sm-2">
            Téléphone
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tel)
        </dd>
        <dt class="col-sm-2">
            Etat de payment
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EtatPayment)
        </dd>
    </dl>
</div>
<div class="d-flex justify-content-start gap-3 align-items-center">
    <a asp-action="Index" class="btn btn-outline-primary">Retour</a>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-success">Modifier</a>

</div>


