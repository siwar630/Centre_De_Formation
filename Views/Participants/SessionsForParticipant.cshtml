@model Centre_de_formation.Models.Participant

@{
    ViewData["Title"] = "Sessions For Participant";
}


<h1 class="text-primary my-5">Liste des Session</h1>

<h3 class="text-black my-5">Participant :  <span class="text-secondary">@Model.Nom @Model.Prenom</span></h3>

    

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Session ID</th>
                <th>Date</th>
                <th>Duration</th>
                <th>Formateur</th>
                <th>Formation</th>
                <th>Salle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var session in Model.Sessions)
            {
                <tr>
                    <td>@session.Id</td>
                    <td>@session.dateDebut.ToShortDateString()</td>
                    <td>@session.duree</td>
                    <td>@session.Formateur.Nom @session.Formateur.Prenom</td>
                    <td>@session.Formation.NomFormation</td>
                    <td>@session.Salle.NumSalle</td>
                </tr>

            }
        </tbody>
    </table>
</div>


<a asp-action="Index" class="btn btn-warning">Retour</a>