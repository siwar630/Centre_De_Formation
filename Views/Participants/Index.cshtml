@model IEnumerable<Centre_de_formation.Models.Participant>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex my-5 text- justify-content-between">
    <h1 class="text-primary">Liste des Participants</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create">Ajouter un Participant</a>
    </p>
</div>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Téléphone</th>
                <th>Etat de payment</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nom)</td>
                    <td>@Html.DisplayFor(modelItem => item.Prenom)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tel)</td>
                    <td>@Html.DisplayFor(modelItem => item.EtatPayment)</td>
                    <td>
                        <a class="btn btn-info text-light" asp-action="Details" asp-route-id="@item.Id">Détails</a>
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Modifier</a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Supprimer</a>
                        <a asp-action="SessionsForParticipant" class="btn btn-secondary" asp-route-id="@item.Id">Sessions</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>


