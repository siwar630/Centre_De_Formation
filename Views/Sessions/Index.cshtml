@model IEnumerable<Centre_de_formation.Models.Session>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex my-5 text- justify-content-between">
    <h1 class="text-primary">Liste des Sessions</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create">Ajouter une Session</a>
    </p>
</div>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Formation
                </th>
                <th>
                    Date Debut
                </th>
                <th>
                    Formateur
                </th>
                <th>
                    Durée
                </th>
                <th>
                    Salle
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Formation.NomFormation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dateDebut)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Formateur.Nom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.duree)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salle.NumSalle)
                    </td>
                    <td>
                        <a class="btn btn-info text-light" asp-action="Details" asp-route-id="@item.Id">Détails</a>
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Modifier</a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Supprimer</a>
                        <a asp-action="ParticipantsForSession" class="btn btn-secondary" asp-route-id="@item.Id">Participants</a>
                        <a asp-action="AddParticipant" class="btn btn-primary" asp-route-id="@item.Id">Inscrire un Participant</a>
                </tr>

            }
        </tbody>
    </table>
</div>


