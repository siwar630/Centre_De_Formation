@model Centre_de_formation.Models.Session

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-5 text-primary my-4">Details de la session @Model?.Id</h1>

<div class="mt-5">

    <dl class="row">
        <dt class="col-sm-2">
            ID de la session
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Formation
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Formation.NomFormation)
        </dd>
        <dt class="col-sm-2">
            Date Debut
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.dateDebut)
        </dd>
        <dt class="col-sm-2">
            Formateur
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Formateur.Nom)
        </dd>
        <dt class="col-sm-2">
            Durée
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.duree)
        </dd>
        <dt class="col-sm-2">
            Salle
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salle.NumSalle)
        </dd>
    </dl>
</div>
<div class="d-flex justify-content-start gap-3 align-items-center">
    <a asp-action="Index" class="btn btn-outline-primary">Retour</a>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-success">Modifier</a>

</div>



